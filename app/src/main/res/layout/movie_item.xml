<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="365dp">

    <ImageView
        android:id="@+id/movie_cover"
        android:layout_width="150dp"
        android:layout_height="216dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_cover"
        android:textSize="@dimen/space_14"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="@dimen/offset_8"/>

    <TextView
        android:id="@+id/movie_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_title"
        android:textSize="@dimen/space_12"
        android:layout_marginTop="@dimen/offset_10"/>

    <ImageView
        android:id="@+id/icon_star"
        android:layout_width="@dimen/ic_star_width"
        android:layout_height="@dimen/ic_star_height"
        android:layout_marginTop="@dimen/offset_8"
        android:contentDescription="@string/movie_rating"
        android:src="@drawable/ic_star_filled"
        app:layout_constraintStart_toStartOf="@id/movie_description"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/icon_star2"
        android:layout_width="@dimen/ic_star_width"
        android:layout_height="@dimen/ic_star_height"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_star_filled"
        app:layout_constraintStart_toEndOf="@id/icon_star"
        app:layout_constraintTop_toTopOf="@id/icon_star" />

    <ImageView
        android:id="@+id/icon_star3"
        android:layout_width="@dimen/ic_star_width"
        android:layout_height="@dimen/ic_star_height"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_star_filled"
        app:layout_constraintStart_toEndOf="@id/icon_star2"
        app:layout_constraintTop_toTopOf="@id/icon_star" />

    <ImageView
        android:id="@+id/icon_star4"
        android:layout_width="@dimen/ic_star_width"
        android:layout_height="@dimen/ic_star_height"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_star_filled"
        app:layout_constraintStart_toEndOf="@id/icon_star3"
        app:layout_constraintTop_toTopOf="@id/icon_star" />

    <ImageView
        android:id="@+id/icon_star5"
        android:layout_width="@dimen/ic_star_width"
        android:layout_height="@dimen/ic_star_height"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@id/icon_star4"
        app:layout_constraintTop_toTopOf="@id/icon_star" />

    <TextView
        android:id="@+id/age_sign"
        android:layout_width="@dimen/age_sign_dimen"
        android:layout_height="@dimen/age_sign_dimen"
        android:layout_marginEnd="@dimen/offset_20"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="@string/age_sign"
        android:textAlignment="center"
        android:textSize="@dimen/space_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>