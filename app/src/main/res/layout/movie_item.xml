<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:minHeight="365dp"
    android:id="@+id/movie_item"
    >
<!-- TODO:// check all dimensions and colors and add tools(just for test)-->
    <androidx.cardview.widget.CardView
        android:id="@+id/movie_cover_wrapper"
        android:layout_width="150dp"
        android:layout_height="216dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/movie_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_8"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/space_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_cover_wrapper" />

    <TextView
        android:id="@+id/movie_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_10"
        android:textSize="@dimen/space_12"



        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_title" />
    <View
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:id="@+id/placeholder"
        app:layout_constraintTop_toBottomOf="@id/movie_description"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/icon_star"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:layout_marginBottom="5dp"

        android:contentDescription="@string/movie_rating"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <ImageView
        android:id="@+id/icon_star2"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@id/icon_star"
        app:layout_constraintTop_toTopOf="@id/icon_star" />

    <ImageView
        android:id="@+id/icon_star3"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@id/icon_star2"
        app:layout_constraintTop_toTopOf="@id/icon_star" />

    <ImageView
        android:id="@+id/icon_star4"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@id/icon_star3"
        app:layout_constraintTop_toTopOf="@id/icon_star" />

    <ImageView
        android:id="@+id/icon_star5"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@id/icon_star4"
        app:layout_constraintTop_toTopOf="@id/icon_star" />

    <TextView
        android:id="@+id/age_sign"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="@string/age_sign"
        android:textAlignment="center"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>