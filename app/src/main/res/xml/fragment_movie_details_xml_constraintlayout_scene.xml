<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear"
        motion:layoutDuringTransition="honorRequest">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/movie_description"
            motion:layout_constraintStart_toStartOf="@id/movie_title"
            android:id="@+id/ratingBar"
            android:layout_marginTop="8dp" />
        <Constraint
            android:id="@+id/movie_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/offset_8"
            motion:layout_constraintTop_toBottomOf="@id/movie_title"
            motion:layout_constraintStart_toStartOf="@id/ratingBar"
            android:layout_marginTop="@dimen/offset_20" />

        <Constraint
            android:id="@+id/age_sign"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/age_sign_dimen"
            android:layout_height="@dimen/age_sign_dimen"
            motion:layout_constraintBottom_toBottomOf="@id/actors_section"
            android:layout_marginEnd="@dimen/offset_20"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/movie_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            android:alpha="0.1" />
        <Constraint
            android:id="@+id/movie_date"
            motion:layout_constraintStart_toEndOf="@id/movie_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/offset_16"
            motion:layout_constraintTop_toTopOf="@id/movie_category"
            android:layout_marginTop="@dimen/offset_3"
            android:alpha="0.1" />
        <Constraint
            android:id="@+id/actors_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/ratingBar"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/offset_35"
            android:alpha="0.1" />
        <Constraint
            android:id="@+id/actors_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/offset_46"
            motion:layout_constraintTop_toBottomOf="@id/actors_section_title"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/offset_16"
            android:alpha="0.1" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>

</MotionScene>